{% trans_default_domain 'FOSUserBundle' %}

<head>
    <title>MailApp</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"/>
    <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/main.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/noscript.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/ie9.css') }}" rel="stylesheet"/>
</head>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


    <div id="wrapper">
        <!-- Header -->
        <header id="header">
            <div class="logo">
                <span class="icon fa-diamond"></span>
            </div>
            <div class="content">
                <div class="inner">
                    <h1>Mail App</h1>

                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="field">
                        <label for="username">Login</label>
                        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                        </div>
                        <div class="field">
                        <label for="password">Hasło</label>
                        <input type="password" id="password" class="form-control" name="_password" required="required" autocomplete="current-password" />
                        </div>
                        <div class="field">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">Zapamiętaj</label>
                        </div>
                        <input type="submit" id="_submit" name="_submit" value="Zaloguj" />
                    </form>

                </div>
            </div>
            <nav>
                <ul>
                    <li><a href="{{ path('fos_user_registration_register') }}">Rejestracja</a></li>
                </ul>
            </nav>
        </header>


            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

        <!-- Footer -->
        <footer id="footer">
            <p class="copyright">&copy; Mateusz Trojanowski. Uniwersytet Śląski 2018.</p>
        </footer>

        </div>

    <!-- BG -->
    <div id="bg"></div>

    <!-- Scripts -->

    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/skel.min.js') }}"></script>
    <script src="{{ asset('js/util.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>

